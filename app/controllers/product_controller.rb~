class ProductsController < ApplicationController

Before_action :set_products, only: [:show, :edit, :update, :destroy]

  def index
    @products = @q.result.order(sort_params).paginate(page: params[:page] || 1)
  end

  def show
  end

  def new
    @products = Products.new
  end

  def create
    @products = Products.new(products_params)
    if @products.save
      redirect_to admin_products_path, notice: t('admin.successfully_created')
    else
      flash[:error] =  @products.errors.full_messages.to_sentence
      render action: 'new'
    end
  end
  
  def edit
    @page_title = t('admin.products.edit', products_name: @products.name)
  end

  def update
    if @products.update(product_params)
      respond_to do |format|
        format.html { redirect_to admin_products_path(@products), notice: t('admin.successfully_updated') }
        format.json { render json: { success: true } }
      end
    else
      flash[:error] = @products.errors.full_messages.to_sentence
      render action: 'edit'
    end
  end 

  def destroy
    @products.destroy
    redirect_to admin_product_path()
  end

  private

  def set_products
    @products = Products.find(params[:id])
  end

  def products_params
    params.require(:products).permit(:name, :description, :rented, :hirefee)
  end
end